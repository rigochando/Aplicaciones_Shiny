#    http://shiny.rstudio.com/
#

library(shiny)
library(plotly)

# Define UI for application that draws a histogram
ui <- fluidPage(

    # Application title
    titlePanel("Permeabilidades Relativas - Corey"),

    # Sidebar with a slider input for number of bins 
    sidebarLayout(
        sidebarPanel(
            
          h3("Parametros Agua - Aceite"),
          
          fluidRow(column(6,  numericInput("Swi","Swi", value = ""),
                          numericInput("krwmax","Krw@Sorw", value = ""),
                          numericInput("Sor","Sorw", value = "")),
                   
                   column(6,  numericInput("now","now (Exponente del aceite)", value = ""),
                          numericInput("nwo","nwo (Exponente del agua)", value = ""),
                          numericInput("kromax","Kro@Swi", value = ""))),
          
          h3("Parametros Gas - Aceite"),
          
          fluidRow(column(6,  numericInput("Sgc","Sgc", value = ""),
                          numericInput("krgmax","Krg@Sorg", value = ""),
                          numericInput("Sorg","Sorg", value = "")),
                   
                   column(6,  numericInput("nog","nog (Exponente del aceite)", value = ""),
                          numericInput("ngo","ngo (Exponente del gas)", value = ""),
                          numericInput("kromaxg","Kro@Swgc", value = "")))
          
          
        ),

        # Show a plot of the generated distribution
        mainPanel(
           column(6, plotlyOutput("Plot_WO", height = "70vh")),
           
           column(6, plotlyOutput("Plot_GO", height = "70vh"))
        )
    )
)

# Define server logic required to draw a histogram
server <- function(input, output) {

    output$distPlot <- renderPlot({
        # generate bins based on input$bins from ui.R
        x    <- faithful[, 2]
        bins <- seq(min(x), max(x), length.out = input$bins + 1)

        # draw the histogram with the specified number of bins
        hist(x, breaks = bins, col = 'darkgray', border = 'white',
             xlab = 'Waiting time to next eruption (in mins)',
             main = 'Histogram of waiting times')
    })
}

# Run the application 
shinyApp(ui = ui, server = server)
